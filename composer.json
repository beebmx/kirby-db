{
    "name": "beebmx/kirby-db",
    "description": "Enable Kirby 3 & 4 database support for Illuminate\\Database",
    "keywords": [
        "kirby", "kirby-3", "kirby-4", "database", "model", "eloquent"
    ],
    "version": "3.0.0",
    "type": "kirby-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Fernando Gutierrez",
            "homepage": "https://beeb.mx"
        }
    ],
    "require": {
        "php": "^8.1",
        "getkirby/composer-installer": "^1.2",
        "illuminate/database": "^10.0",
        "illuminate/hashing": "^10.0"
    },
    "require-dev": {
        "getkirby/cms": "^4.0",
        "laravel/pint": "^1.13",
        "phpunit/phpunit": "^10.1",
        "spatie/ray": "^1.34"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "getkirby/composer-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "Beebmx\\KirbyDb\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Beebmx\\KirbyDb\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "php tests/fixHelpers.php",
            "vendor/bin/phpunit"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
